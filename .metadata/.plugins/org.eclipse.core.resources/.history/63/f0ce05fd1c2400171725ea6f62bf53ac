
public class FloydovTrikotnik {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Vpiši število vrstic: ");
		int steviloVrstic = BranjePodatkov.preberiInt();
		int stevilo = 0;
		for(int i = 0; i < steviloVrstic; i++){
			for(int j = 0; j < i; j++){
				stevilo++;
				System.out.printf("%4d", stevilo);
			}
		System.out.println();
		}
	}
}
